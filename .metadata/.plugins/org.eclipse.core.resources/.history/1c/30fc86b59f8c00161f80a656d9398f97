
public class List /*extends Node*/ {
//	public List(String s, String n, int i) {
//		super(s, n, i);
//		// TODO Auto-generated constructor stub
//	}

	public static Node last=null;
	public static Node first=null;
	public static java.lang.reflect.Method method;
	
	public static void insertNode(String species, String name, int age){
		Node newNode = new Node(species, name, age);
		newNode.link = null;
		
		// Check if list is empty
		if (first == null){
			first = newNode;
			last =newNode;
		}
		else {
			last.link = newNode;
			last=newNode;
		}
	}
	
	
	
	public static void main(String[] args){
		// adding elements to list
		insertNode("Travis","CUS1126",20);
		insertNode("Chris","CUS1115",21);
		insertNode("Yi Yi","CUS1116",19);
		display();
		deleteNode("Chris","CUS1115",21);
//		first.link = first.link.link;
		display();
	}
	
	//display the linked list
	public static void display(){
		Node current = first;
		while (current!=null){
			System.out.println(current.toString());
			current = current.link;
		}
		
	}
	
	//delete node
	public static void deleteNode(String species, String targetName, int id){
		Node current = first;
		// is the list empty
		if (current == null){
			System.out.println("Empty list");
			return;
		}
		int count = 0;
		while (current!=null){
			System.out.println(current.name);
			if (current.name.equals(targetName)){
				first = pointLink(first, current, count, current.link, count);
			}
			count++;
			current = current.link;
		}
	}
	
	private static Node pointLink(Node beginning, Node previous, int count, Node target, int targetCount){
		if (count == 0){
			return beginning;
		} else {
			if (count == targetCount){
				previous = target; // target = current.link
			}
			beginning.link = previous;
			count--;
			return pointLink(beginning, previous, count, target, targetCount);
		}
		
	}
	
	
}
