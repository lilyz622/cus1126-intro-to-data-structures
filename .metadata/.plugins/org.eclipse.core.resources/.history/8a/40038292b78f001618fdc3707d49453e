
public class List {
	public Node head;
	public Node tail;
	public void insertNode(int input){
		Node newNode = new Node();
		newNode.info = input;
		newNode.link = null;
		Node oldTail = tail;
		if (head == null){
			head = newNode;
			tail = head;
			oldTail = tail;
		} else {
			tail.link = newNode;
			tail = newNode;
		}
		System.out.println("Head:"+head.info+"\tOld Tail:"+oldTail.info+"\tNew Tail:"+tail.info);
	}
	
	public void sumLinkedList(Node current){
		Node temp = current;
		int sum = 0;
		while (temp != null){
			sum += temp.info;
			temp = temp.link;
		}
		System.out.println("The sum is:"+sum);
	}

}
